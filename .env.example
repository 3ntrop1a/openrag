# Configuration générale
PROJECT_NAME=OpenRAG
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# MinIO Configuration
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin123456
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET_NAME=documents
MINIO_SECURE=false

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=documents_embeddings
QDRANT_VECTOR_SIZE=1536

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32

# LLM Configuration
LLM_PROVIDER=ollama  # Options: ollama, openai, anthropic
LLM_MODEL=llama3.1:8b
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# OpenAI (si utilisé)
OPENAI_API_KEY=your-api-key-here

# Ollama Configuration
OLLAMA_HOST=ollama:11434
OLLAMA_NUM_PARALLEL=2

# PostgreSQL (Document Metadata Store)
POSTGRES_USER=openrag
POSTGRES_PASSWORD=openrag123
POSTGRES_DB=openrag_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis (Cache & Queue)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
